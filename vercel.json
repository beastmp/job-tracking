{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "frontend/build",
  "installCommand": "npm run install:all",
  "functions": {
    "api/index.js": {
      "maxDuration": 60
    }
  },
  "routes": [
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/(favicon.ico|logo192.png|logo512.png|manifest.json|robots.txt)", "dest": "/$1" },
    { "src": "/api/(.*)", "dest": "/api" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "env": {
    "REACT_APP_API_URL": ""
  },
  "github": {
    "enabled": true,
    "silent": false,
    "autoAlias": true
  },
  "git": {
    "deploymentEnabled": {
      "main": true,
      "develop": true,
      "feature/*": true
    }
  }
}