# Server configuration
PORT=5000
API_BODY_LIMIT=50mb
API_TIMEOUT=30000

# MongoDB configuration
MONGODB_URI=mongodb+srv://username:password@cluster.example.mongodb.net/?retryWrites=true&w=majority&appName=appname

# LinkedIn rate limiting configuration for data enrichment
LINKEDIN_REQUESTS_PER_MINUTE=5
LINKEDIN_MAX_CONSECUTIVE_FAILURES=3
LINKEDIN_STANDARD_DELAY=12000
LINKEDIN_BACKOFF_DELAY=60000
LINKEDIN_REQUEST_TIMEOUT=15000
LINKEDIN_MAX_REDIRECTS=5

# Email configuration
EMAIL_ADDRESS=example@gmail.com
EMAIL_PROVIDER=Gmail
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
USE_TLS=true
DEFAULT_SEARCH_TIMEFRAME_DAYS=90
DEFAULT_SEARCH_FOLDERS=INBOX
EMAIL_IMPORT_BATCH_SIZE=10

# Job defaults
DEFAULT_LOCATION_TYPE=Remote
DEFAULT_EMPLOYMENT_TYPE=Full-time
DEFAULT_WAGE_TYPE=Yearly

# Security configuration
ENCRYPTION_KEY=replace_with_32_character_random_string

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100